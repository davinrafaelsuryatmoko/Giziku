<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahMakananFragment">

    <!-- Background Biru Atas -->
    <View
        android:id="@+id/topBackgroundbiru"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ MAKANAN"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/topBackgroundbiru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/topBackgroundbiru"
        app:layout_constraintVertical_bias="0.3" />

    <!-- ScrollView untuk form -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/bg_white_round"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Form -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Tambah Makanan"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:background="#CCCCCC" />

            <!-- Nama Makanan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Makanan"
                android:textSize="14sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etNamaMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Masukkan nama makanan"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textSize="14sp"
                android:textColor="#333333" />

            <Spinner
                android:id="@+id/spinnerKategori"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:padding="12dp" />

            <!-- Jumlah (Porsi) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah (Porsi)"
                android:textSize="14sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etJumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Contoh: 1"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Kalori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kalori (Kkal)"
                android:textSize="14sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etKalori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Contoh: 175"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Protein (g) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein (g)"
                android:textSize="14sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Contoh: 20"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Lemak (g) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lemak (g)"
                android:textSize="14sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etLemak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Contoh: 5"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Karbohidrat (g) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karbohidrat (g)"
                android:textSize="14sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/etKarbohidrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input_field"
                android:hint="Contoh: 45"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Foto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto"
                android:textSize="14sp"
                android:textColor="#333333" />

            <!-- Upload Foto Button -->
            <LinearLayout
                android:id="@+id/btnUploadFoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/baground_update_gambar"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPreviewFoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivUploadIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_masukin_gambar"
                    android:contentDescription="Upload Icon"
                    app:tint="#999999" />

            </LinearLayout>

            <!-- Button Simpan -->
            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button_riwayat"
                android:paddingStart="40dp"
                android:paddingTop="12dp"
                android:paddingEnd="40dp"
                android:paddingBottom="12dp"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>