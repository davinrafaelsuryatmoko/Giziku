<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">


    <View
        android:id="@+id/headerBiru"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/biru"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/textJudulProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFIL"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@id/headerBiru"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardUtama"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="22dp">


                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:src="@drawable/welcome"/>


                <View
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.6"
                    android:layout_height="1.3dp"
                    android:background="#707070"
                    android:layout_marginBottom="18dp"/>


                <TextView
                    android:id="@+id/textnama"
                    android:text="Nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#E6E6E6"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:id="@+id/isiNama"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:text="Dila Alif Regita"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:padding="6dp"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/textemail"
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#E6E6E6"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:id="@+id/isiEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:text="dilaalifregita@gmail.com"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:padding="6dp"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/telepon"
                    android:text="No Telepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#E6E6E6"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:id="@+id/isiTelepon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:text="0857 8899 8899"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:padding="6dp"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/textpassword"
                    android:text="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#E6E6E6"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="22dp">

                    <TextView
                        android:id="@+id/isiPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:text="********"
                        android:inputType="textPassword"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:padding="6dp"/>
                </RelativeLayout>


                <Button
                    android:id="@+id/btnKeluar"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:text="KELUAR"
                    android:textStyle="bold"
                    android:backgroundTint="#A6DBFF"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="22dp"/>

            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>