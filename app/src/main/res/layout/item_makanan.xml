<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Icon Makanan -->
    <ImageView
        android:id="@+id/ivMakananIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nasi_item" />

    <!-- Info Makanan -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNamaMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasi Putih"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvKaloriMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="175 Kkal"
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Button Tambah -->
    <TextView
        android:id="@+id/btnTambahItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_tambah_item"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingTop="6dp"
        android:paddingEnd="16dp"
        android:paddingBottom="6dp"
        android:text="Tambah"
        android:textColor="@color/biru"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>